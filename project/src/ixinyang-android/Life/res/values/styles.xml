<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_black">
        <item name="android:textColor">@drawable/default_text_color</item>
    </style>

    <style name="text_black_small" parent="@style/text_black">
        <item name="android:textSize">13.0sp</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="evaRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/eva_rating_bar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="partRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/part_rating_bar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="CustomRadiobuttonTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radiobutton_style</item>
    </style>

       <style name="NimingbuttonTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/niming_button_style</item>
    </style>
    
</resources>