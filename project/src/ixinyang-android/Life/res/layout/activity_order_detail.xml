<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_store"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/citylist_divider"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_weight="0"
        android:background="@drawable/bg_actionbar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:src="@drawable/abs__ic_ab_back_holo_dark" />

        <ImageButton
            android:id="@+id/ib_return_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:background="@drawable/ic_action_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/order_detail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/head_text_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/set_layout_bg" >

                <ImageView
                    android:id="@+id/img_blumn_order"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_luncher_big" />

                <TextView
                    android:id="@+id/txt_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_blumn_order"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="1.0dip"
                    android:layout_toRightOf="@id/img_blumn_order"
                    android:singleLine="true"
                    android:text="飞逸摄影"
                    android:textColor="@color/text_color_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/txt_order_title"
                    android:layout_below="@id/txt_order_title"
                    android:layout_marginBottom="10.0dip"
                    android:singleLine="true"
                    android:text="个性写真套系，为你打造专属于自己的好气质"
                    android:textColor="@color/viewfinder_mask"
                    android:textSize="@dimen/set_text_size" />

                <TextView
                    android:id="@+id/tv_order_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_order_content"
                    android:layout_below="@id/tv_order_content"
                    android:layout_marginBottom="10.0dip"
                    android:text="198"
                    android:textColor="@color/green"
                    android:textSize="@dimen/price_text_size" />

                <TextView
                    android:id="@+id/tv_order_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_order_jiage"
                    android:layout_below="@id/tv_order_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_toRightOf="@id/tv_order_jiage"
                    android:text="元"
                    android:textColor="@color/viewfinder_mask"
                    android:textSize="@dimen/store_text_size" />

                <TextView
                    android:id="@+id/tv_order_old_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_order_jiage"
                    android:layout_below="@id/tv_order_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@id/tv_order_yuan"
                    android:text="388元"
                    android:textColor="@color/viewfinder_mask"
                    android:textSize="@dimen/store_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" >

                <TextView
                    android:id="@+id/tv_dd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:drawableLeft="@drawable/ic_support_refund"
                    android:drawablePadding="3.0dip"
                    android:gravity="center_vertical"
                    android:text="随时退款"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/store_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toRightOf="@id/tv_dd1"
                    android:drawableLeft="@drawable/ic_support_refund"
                    android:drawablePadding="3.0dip"
                    android:gravity="center_vertical"
                    android:text="过期退款"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/store_text_size" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/shape_fe9900"
                android:gravity="center"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:text="付款"
                android:textColor="@color/white"
                android:textSize="@dimen/group_purchase_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="套餐"
                android:textColor="@android:color/black"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/cursor"
                android:scaleType="centerCrop" />

            <ListView
                android:id="@+id/lv_evaluation"
                android:layout_width="fill_parent"
                android:layout_height="350.0dip"
                android:layout_margin="10.0dip"
                android:divider="@drawable/divider"
                android:scrollbars="none">
            </ListView>

            <TextView
                android:id="@+id/tv_moreping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10.0dip"
                android:background="@drawable/shape_ff32b9aa"
                android:paddingBottom="10.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="10.0dip"
                android:text="查看图文详情"
                android:textColor="@color/white"
                android:textSize="@dimen/set_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="订单详情"
                android:textColor="@android:color/black"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/cursor"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="订单号：630240027"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/divider"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="下单时间：2014-09-05  11:15"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/divider"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="购买手机号：13855117363"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/divider"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="数量：1"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/divider"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:text="总价：198元"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/default_text_size" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/divider"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>