<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_refresh_addr"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10.0dip"
    android:background="@color/citylist_divider"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10dip"
        android:paddingTop="10.0dip"
        android:text="长沙市雨花区韶山南路-香樟路"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/city_16_text" />

    <ImageView
        android:id="@+id/img_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@drawable/ic_refresh"
        android:layout_gravity="center"
        android:paddingBottom="10.0dip"
        android:paddingRight="15dip"
        android:paddingTop="10.0dip"
        android:src="@drawable/ic_refresh" />

</RelativeLayout>