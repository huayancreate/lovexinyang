<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:layout_marginTop="15.0dip" >

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="wzz_rj0902"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size" />

        <ImageView
            android:id="@+id/img_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@id/tv_nickname"
            android:src="@drawable/ic_user_growth_1" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@id/img_rank"
            android:text="2014-08-27"
            android:textColor="@color/viewfinder_mask"
            android:textSize="@dimen/default_text_size" />

        <RatingBar
            android:id="@+id/rtb_rating"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="5.0dip"
            android:numStars="5"
            android:rating="3" >
        </RatingBar>

        <com.huayan.life.view.CollapsibleTextView
            android:id="@+id/tv_evaluation_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_nickname"
            android:layout_below="@id/tv_nickname"
            android:layout_marginBottom="18.0dip" />

        <com.huayan.life.view.MyGridView
            android:id="@+id/gv_mapping"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tv_evaluation_content"
            android:cacheColorHint="@android:color/transparent"
            android:columnWidth="145.0dip"
            android:gravity="center"
            android:horizontalSpacing="10dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:focusable="false"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dip" />

        <TextView
            android:id="@+id/tv_pic_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/gv_mapping"
            android:layout_marginRight="22.0dip"
            android:layout_marginTop="-38.0dip"
            android:background="@color/text_bg"
            android:paddingBottom="3.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="3.0dip"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size" />
    </RelativeLayout>

</LinearLayout>