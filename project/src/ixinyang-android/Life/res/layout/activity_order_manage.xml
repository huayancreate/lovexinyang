<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.huayan.life"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeeeeee"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/view_page_header" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_bar"
        android:padding="0dp" >

        <com.huayan.life.view.TitlePageIndicator
            android:id="@+id/pvr_user_indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#969696"
            android:textSize="@dimen/text_17"
            app:footerColor="@color/text_green"
            app:selectedBold="false"
            app:selectedColor="@color/black" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_ViewPager2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/citylist_divider" />

</LinearLayout>