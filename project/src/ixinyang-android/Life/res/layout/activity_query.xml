<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/citylist_divider"
    android:orientation="vertical" >

    <!-- 头部导航 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_actionbar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:src="@drawable/abs__ic_ab_back_holo_dark" />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:background="@drawable/ic_action_home" />

        <EditText
            android:layout_width="190.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="3.0dip"
            android:drawableLeft="@drawable/ic_search_green"
            android:drawablePadding="3.0dip"
            android:gravity="center_vertical"
            android:hint="@string/tishi"
            android:textColor="@color/text_color_gray"
            android:textColorHint="@color/text_normal"
            android:textSize="@dimen/default_text_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/ll_query"
                android:layout_width="70dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/query"
                    android:textColor="@color/white"
                    android:textSize="@dimen/head_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.huayan.life.view.MyGridView
        android:id="@+id/hot_type"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10.0dip"
        android:cacheColorHint="@android:color/transparent"
        android:columnWidth="90dip"
        android:gravity="center"
        android:horizontalSpacing="10dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dip" />

</LinearLayout>