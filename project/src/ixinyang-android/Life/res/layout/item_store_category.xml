<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="170.0dip"
        android:background="@color/text_green"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="6.0dip"
            android:gravity="center"
            android:maxEms="2"
            android:text="美食美食"
            android:textColor="@color/white"
            android:textSize="@dimen/group_purchase_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_type1"
        android:layout_width="@dimen/type_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/ll_left" >

        <FrameLayout
            android:id="@+id/fl_type"
            android:layout_width="@dimen/type_width"
            android:layout_height="wrap_content" >

            <com.huayan.life.view.AdvViewPager
                android:id="@+id/adv_type"
                android:layout_width="fill_parent"
                android:layout_height="167dp"
                android:visibility="visible" >
            </com.huayan.life.view.AdvViewPager>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/vg_type"
            android:layout_width="@dimen/type_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_type"
            android:layout_marginTop="-25px"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>