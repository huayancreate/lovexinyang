<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/citylist_divider"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/title_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/view_page_header" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/reg_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_frame"
        android:layout_marginBottom="50.0dp"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="40.0dip"
        android:gravity="center" >

        <ImageView
            android:id="@+id/xunmi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_luncher_big" />

        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/xunmi_logo"
            android:layout_below="@id/xunmi_logo"
            android:layout_marginLeft="5.0dp"
            android:layout_marginTop="10.0dp"
            android:text="爱信阳v1.0"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/default_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_box"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip" >

        <ImageView
            android:id="@+id/img_sline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5.0dp"
            android:src="@drawable/divider" />

        <TextView
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_sline"
            android:drawableRight="@drawable/ic_global_arrow_right_2px"
            android:padding="5.0dp"
            android:text="用户协议"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/default_text_size" />

        <ImageView
            android:id="@+id/img_sline2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:padding="5.0dp"
            android:src="@drawable/divider" />

        <TextView
            android:id="@+id/info_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_sline2"
            android:drawableRight="@drawable/ic_global_arrow_right_2px"
            android:padding="5.0dp"
            android:text="客服电话：400-660-5353"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/default_text_size" />

        <ImageView
            android:id="@+id/img_sline3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_phone"
            android:padding="5.0dp"
            android:src="@drawable/divider" />

        <TextView
            android:id="@+id/about_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20.0dip"
            android:gravity="center"
            android:lineSpacingExtra="3.0dip"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/about_info"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/default_text_size" />
    </RelativeLayout>

</RelativeLayout>