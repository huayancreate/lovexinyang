<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/set_layout_bg" >

        <ImageView
            android:id="@+id/img_icon_store"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic" />

        <TextView
            android:id="@+id/txt_icon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_icon_store"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@id/img_icon_store"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="爱时尚生活包铺"
            android:textColor="@color/black"
            android:textSize="@dimen/text_17" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_icon_name"
            android:layout_below="@id/txt_icon_name"
            android:layout_marginBottom="10.0dip"
            android:maxLines="2"
            android:text="NO.153006790799"
            android:textColor="@color/viewfinder_mask"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tv_youhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_number"
            android:layout_below="@id/tv_number"
            android:layout_marginBottom="10.0dip"
            android:text="全店9.5折"
            android:textColor="@color/text_press"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_number"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/shape_dd4422"
            android:paddingBottom="7.0dip"
            android:paddingLeft="15.0dip"
            android:visibility="gone"
            android:paddingRight="15.0dip"
            android:paddingTop="7.0dip"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size" />
    </RelativeLayout>

</LinearLayout>